generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  GUEST
  ADMIN
}

model User {
  id         String @id @default(uuid())
  userId     String @unique
  email      String @unique
  role       Role   @default(GUEST)
  profilePic String @db.Text
  firstName  String
  lastName   String

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}
